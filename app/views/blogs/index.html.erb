<h1>ブログ一覧</h1>

<div class="container">
  <div id="new-blog-link">
    <%= link_to '新規ブログを作成する', new_blog_path, class: 'btn btn-default' %>
  </div>

  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <div class="blog-links">
          <%= link_to 'Show', blog, class: 'btn btn-default' %>
          <% if blog.user_id == current_user.id %>
            <%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-info' %>
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
